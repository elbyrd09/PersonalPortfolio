<div class="container-trans">
  <%= render '/shared/header_transp' %>
      <main id="top-blog">
        <ul>
          <div class="page-content">
            <% @blogs.each do |blog| %>
                <div class="<%= update_class(blog) %>" style="list-style-type: none;">
                  <li>
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text"><%= (blog.content).first(25) %> ..... </p>
                  </li>
                </div>
            <% end %>
        </div>
      </ul>
    </main>
  <%= render '/shared/footer' %>
</div>
