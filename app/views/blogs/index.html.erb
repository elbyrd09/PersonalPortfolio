<div class="container-trans">
  <%= render '/shared/header' %>
    <main class="vertical-tabs">
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="code-tab" data-toggle="tab" href="#pag1" role="tab" aria-controls="Coding">Coding</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="byrd-tab" data-toggle="tab" href="#pag2" role="tab" aria-controls="Byrd's words">Byrd's words</a>
        </li>
        <li class="nav-item" >
          <a class="nav-link" id="interest-tab" data-toggle="tab" href="#pag3" role="tab" aria-controls="My interests">My interests</a>
        </li>
      </ul>
        <div class="tab-content">
          <ul>
          <% @blogs.each do |blog| %>
            <div class="tab-pane fade show active" id="<%= update_id(blog) %>" role="tabpanel">
                <%= link_to blog_path(blog), style: "text-decoration: none" do %>
              <div class="card">
                <li style="list-style: none;">
                  <!-- <img class="card-img-top" src="bp1.png" alt="Blog image"> -->
                  <div class="card-body">
                    <p class="card-text"><%= blog.title %></p>
                  </div>
                </li>
                <% end %>
              </div>
          </div>
        <% end %>
              </ul>
      </div>
    <%= render '/shared/footer' %>
    </main>
  </div>
